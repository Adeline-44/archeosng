                    <div class="col-8">{{ form_widget(form.poste) }}</div>
                </div>
                <!-- Catégorie -->
                <div class="row page-create pt-1">
                    <div class="col-3">
                        <p class="fw-bold fs-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-asterisk alert-danger" viewBox="0 0 16 16">
                                <path d="M8 0a1 1 0 0 1 1 1v5.268l4.562-2.634a1 1 0 1 1 1 1.732L10 8l4.562 2.634a1 1 0 1 1-1 1.732L9 9.732V15a1 1 0 1 1-2 0V9.732l-4.562 2.634a1 1 0 1 1-1-1.732L6 8 1.438 5.366a1 1 0 0 1 1-1.732L7 6.268V1a1 1 0 0 1 1-1z"/>
                            </svg> {{ form_label(form.categorie) }}</p>
                    </div>
                    <div class="col-6">
                        {{ form_widget(form.categorie) }}
                    </div>
                </div>
                <!-- Cadre emploi -->
                <div class="row page-create pt-1">
                    <div class="col-3">&nbsp;</div>
                    <div class="col-8">
                        {{ form_row(form.cadreEmploi) }}
                    </div>
                </div>

                <!-- Service militaire -->
                <div class="row page-create pt-1">
                    <div class="col-12">
                        {{ form_label(form.militaire) }}
                    </div>
                </div>
                <div class="row page-create">
                    <div class="col-3">&nbsp;</div>
                        <div class="col-2">{{ form_widget(form.militaire) }}</div>
                        <div class="col-2">
                            {{ form_row(form.militaireDays) }}
                        </div>
                    </div>

                <div class="row page-create pt-1">
                    <div class="col-3">
                        {{ form_label(form.genre) }}
                    </div>
                    <div class="col-2">{{ form_widget(form.genre) }}</div>
                </div>
                <div class="row page-create pt-1">
                    <div class="col-3">
                        {{ form_label(form.lastName) }}
                    </div>
                    <div class="col-4">
                        {{ form_widget(form.lastName) }}
                    </div>
                </div>
                <div class="row page-create pt-1">
                    <div class="col-3">
                        {{ form_label(form.firstName) }}
                    </div>
                    <div class="col-4">
                        {{ form_widget(form.firstName) }}
                    </div>
                </div>
                <div class="row page-create pt-1">
                    <div class="col-3">
                        {{ form_label(form.adr1) }}
                    </div>
                    <div class="col-6">
                        {{ form_widget(form.adr1) }}
                    </div>
                </div>
                <div class="row page-create pt-1">
                    <div class="col-3">
                        {{ form_label(form.adr2) }}
                    </div>
                    <div class="col-6">
                        {{ form_widget(form.adr2) }}
                    </div>
                </div>
                <div class="row page-create pt-1">
                    <div class="col-3">
                        {{ form_label(form.cp) }}
                    </div>
                    <div class="col-2">
                        {{ form_widget(form.cp) }}
                    </div>
                </div>
                <div class="row page-create pt-1">
                    <div class="col-3">
                        {{ form_label(form.city) }}
                    </div>
                    <div class="col-4">
                        {{ form_widget(form.city) }}
                    </div>
                </div>
                <div class="row page-create pt-3">
                    <div class="col-5">&nbsp;</div>
                    <div class="col-2">{{ form_end(form) }}</div>
                    <div class="col-5">&nbsp;</div>

                </div>

                <h2 class="pt-3">Poursuivre le calcul précédent</h2>
                {{ form_start(formulaire) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(formulaire) }}
                </div>

                <div class="row page-create">
                    <div class="col-8">
                        {{ form_rest(formulaire) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
    <script>
        window.onload = () => {
            var $type = $('#employee_militaire');
            var $cat = $('#employee_categorie');
            //qd on sélectionne le type
            $type.change(function() {
                //on récupère le formulaire
                var $form = $(this).closest('form');
                //on génère des data vide où on va mettre le type sélectionné
                var data = {};
                data[$type.attr('name')] = $type.val();
                console.log(data);
                // on submit les data en ajax
                $.ajax({
                    url: $form.attr('action'),
                    type: $form.attr('method'),
                    data: data,
                    complete: function(html) {
                        $('#employee_militaireDays').replaceWith($(html.responseText).find('#employee_militaireDays'));
                    }
                });
            })

            $cat.change(function() {
                //on récupère le formulaire
                var $form = $(this).closest('form');
                //on génère des data vide où on va mettre le type sélectionné
                var data = {};
                data[$cat.attr('name')] = $cat.val();
                console.log(data);
                // on submit les data en ajax
                $.ajax({
                    url: $form.attr('action'),
                    type: $form.attr('method'),
                    data: data,
                    complete: function(html) {
                        $('#employee_cadreEmploi').replaceWith($(html.responseText).find('#employee_cadreEmploi'));
                    }
                });
            })
        };

    </script>

{% endblock %}